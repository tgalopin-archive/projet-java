<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="320.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.moviz.controller.LoginController">

    <children>
        <VBox alignment="CENTER">
            <children>
                <ImageView fitHeight="25.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@img/moviz.png" />
                    </image>

                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </ImageView>

                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Vous devez vous connecter pour utiliser Moviz" />
            </children>

            <padding>
                <Insets bottom="10.0" top="20.0" />
            </padding>
        </VBox>
        <VBox maxWidth="-Infinity" minWidth="-Infinity" prefWidth="250.0">
            <children>
                <Label text="Identifiant">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </Label>

                <TextField fx:id="loginField">
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </TextField>

                <Label layoutX="10.0" layoutY="10.0" text="Mot de passe">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </Label>

                <PasswordField fx:id="passwordField" />

                <HBox alignment="TOP_RIGHT" prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="loginButton" mnemonicParsing="false" text="Se connecter" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>

                <HBox alignment="CENTER">
                    <children>
                        <Text fill="#ae0000" strokeType="OUTSIDE" strokeWidth="0.0" text="" fx:id="errorDisplay" />
                    </children>
                </HBox>
            </children>

            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </VBox>
    </children>
</VBox>
